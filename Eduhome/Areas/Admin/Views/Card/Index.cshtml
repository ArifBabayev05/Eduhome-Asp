@model List<Card>

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h1 class="card-title">Cards</h1>
                <div class="d-flex justify-content-between my-3">
                    <a asp-area="admin" asp-controller="dashboard" asp-action="index" class="btn btn-secondary">Go Back</a>
                    <a asp-area="admin" asp-controller="card" asp-action="create" class="btn btn-success">Create</a>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Title
                                </th>
                                <th>
                                    Body
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var card in Model)
                            {
                                <tr>
                                    <td class="py-1">
                                        <img src="~/assets/uploads/images/@card.Image.Name" alt="image" />
                                    </td>
                                    <td>
                                        @card.Title
                                    </td>
                                    <td>
                                        @card.Text
                                    </td>
                                    <td>
                                        <a asp-area="admin" asp-controller="card" asp-action="details" asp-route-id="@card.Id" class="btn btn-primary">Details</a>
                                        <a asp-area="admin" asp-controller="card" asp-action="update" asp-route-id="@card.Id" class="btn btn-warning">Update</a>
                                        <a asp-area="admin" asp-controller="card" asp-action="delete" asp-route-id="@card.Id" class="btn btn-danger">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>