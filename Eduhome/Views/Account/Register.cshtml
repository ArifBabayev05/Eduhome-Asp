@model RegisterVM
    <!-- Register start -->
    <div class="register-area pt-150 pb-150">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3 text-center">
                    <div class="login">
                        <div class="login-form-container">
                            <div class="login-text">
                                <h2>sign up</h2>
                                <div asp-validation-summary="All" class="text-danger"></div>
                            </div>
                            <div class="login-form">
                                <form method="post">
                                    <div class="form-group1"
                                        <label asp-for="FirstName">FirstName</label>
                                        <input asp-for="FirstName" placeholder="FirstName">
                                    </div>
                                    <div class="form-group1"
                                        <label asp-for="LastName">LastName</label>
                                        <input asp-for="LastName" placeholder="LastName">
                                    </div>
                                    <div class="form-group1"
                                        <label asp-for="Username">Username</label>
                                        <input asp-for="Username" placeholder="Username">
                                    </div>
                                    <div class="form-group1"
                                        <label asp-for="Email">Email</label>
                                        <input asp-for="Email" placeholder="Email">
                                    </div>
                                    <div class="form-group1"
                                        <label asp-for="Password">Password</label>
                                        <input asp-for="Password" placeholder="Password">
                                    </div>
                                    <div class="form-group1"
                                        <label asp-for="ConfirmPassword">ConfirmPassword</label>
                                        <input asp-for="ConfirmPassword" placeholder="ConfirmPassword">
                                    </div>
                                    <div class="button-box">
                                        <div class="login-toggle-btn">
                                            <input type="checkbox" id="remember">
                                            <label for="remember">Remember me</label>
                                            <a href="#">Forgot Password?</a>
                                        </div>
                                        <button type="submit" class="default-btn">sign up</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Register end -->  