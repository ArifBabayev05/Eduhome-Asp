@model LoginVM

<!-- Login start -->
<div class="login-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>login</h2>
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </div>
                        <div class="login-form">
                            <form action="#" method="post">

                                <div class="form-group1"
                                        <label asp-for="Username">Username</label>
                                        <input asp-for="Username" placeholder="Username">
                                </div>

                                <div class="form-group1"
                                        <label asp-for="Password">Password</label>
                                        <input asp-for="Password" placeholder="Password">
                                </div>

                                <div class="button-box">
                                    <div class="login-toggle-btn">
                                        <input type="checkbox" asp-for="RememberMe">
                                        <label asp-for="RememberMe ">Remember me</label>
                                        <a href="#">Forgot Password?</a>
                                    </div>
                                    <button type="submit" class="default-btn">Login</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Login end -->
